<h4>Posts</h4><br>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Criador</th>
      <th scope="col">Postagem</th>
      <th scope="col">Criado Em</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= post.user.name %></td>
      <td><%= post.body.truncate(30) %></td>
      <td><%= post.created_at.strftime("%d/%m/%Y Ã¡s %H:%M") %></td>
      <td><%= link_to "Visualizar", admin_post_path(post), class: "btn btn-outline-info btn-sm" %></td>
      <td><%= link_to "Excluir", admin_post_path(post), data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja remover esse post?" }, class: "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>