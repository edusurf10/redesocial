<h4>Post #<%= @post.id %></h4><br>

<div class="card text-white bg-dark mb-3 mt-3">
  <div class="card-header"><%= image_tag(@post.user.avatar, class: "ui-w-100-forced rounded-circle mr-3", style: "width: 30px; height: 30px") %> <%= @post.user.name %></div>
  <div class="card-body">
    <small class="text-muted"><%= @post.created_at.strftime("%d/%m/%Y - %H:%M") %></small>
    <p class="card-text"><%= @post.body %></p>
  </div>
  <div class="card-footer">
    <div class="row justify-content-between">
      <div class="col-auto mr-auto">
        <%= link_to "Excluir", admin_post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esse post?" }, class: "btn btn-outline-danger btn-sm" %>
      </div>
      <div class="col-auto">
        <%= link_to "Voltar", admin_posts_path, class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  </div>
</div>
