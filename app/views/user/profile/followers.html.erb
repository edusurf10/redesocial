<div class="row">
  <% @followers.each do |user| %>
    <div class="col-lg-4">
      <div class="card">
        <%= render "user_card_header", user: user %>
        <div class="card-body">
          Email:<p class="card-text text-muted"><%= user.email %></p>
          Telefone:<p class="card-text text-muted"><%= user.phone %></p>
          Criado Em:<p class="card-text text-muted"><%= user.created_at.strftime("%d/%m/%Y - %H:%M") %></p>
          Atualizado Em:<p class="card-text text-muted"><%= user.updated_at.strftime("%d/%m/%Y - %H:%M") %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>